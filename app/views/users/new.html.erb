<% provide(:title, 'Sign up') %>
<h1 class="pageheader">Sign up</h1>

</br>
</br>
<div class="row">
    <div class="col-md-6 col-md-offset-1">
        <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages' %>
            
            <%= f.label :name %>
            <%= f.text_field :name %>
            
            <%= f.label :email %>
            <%= f.text_field :email %>
            
            <%= f.label :password %>
            <%= f.password_field :password %>
            
            <%= f.label :password_confirmation, "Password Confirmation" %>
            <%= f.password_field :password_confirmation %>
            
            </br>
            </br>

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingOne">
      <h4 class="panel-title">
        <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
          If you are a professional affiliating with a business select here:
        </a>
      </h4>
    </div>
    <div id="collapseOne" class="panel-collapse collapse out" role="tabpanel" aria-labelledby="headingOne">
      <div class="panel-body">
        <%= f.label :business_id, "Business ID" %>
        <%= f.text_field :business_id, placeholder: "Business ID Code # here"  %>
      </div>
    </div>
  </div>
  
</div>
            
            </br>
            </br>
            <%= f.submit "Create my account", class: "btn btn-primary2" %>
            
            <% end %>
            </br>
            </br>
            </br>
