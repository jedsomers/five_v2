<% provide(:title, "Profile: update") %>
</br>
<h1 class="pageheader">Update your profile</h1>
</br>
</br>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>
            
            <%= f.label :hometown %>
            <%= f.text_field :hometown, class: 'form_control' %>
            
            <%= f.label :age %>
            <%= f.text_field :age, class: 'form_control' %>
            
            <%= f.label :favorite, "Favorite flavor of ice cream" %>
            <%= f.text_field :favorite, class: 'form_control' %>
            
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form_control' %>
            
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form_control' %>
            
            <%= f.label :business_id, "Business ID" %>
            <%= f.text_field :business_id %>
            </br>
            </br>
            <% if current_user.admin? %>
           <%= f.label :manager, "Manager (t/f)" %>
           <%= f.text_field :manager %>
             <% end %>
            
            
            <%= f.label :password %>
            <%= f.password_field :password %>
            
            <%= f.label :password_confirmation, "Confirmation" %>
            <%= f.password_field :password_confirmation %>
            
            

            </br>
            
            <div class="gravatar_edit">
                <%= gravatar_for @user %>
                <a href="http://gravatar.com/emails">Change</a>
            </div>
            </br>
            </br>
            <%= f.submit "Save changes", class: "btn btn-primary2" %>
            <% end %>
            </br>
            </br>
            </br>

    </div>
</div>